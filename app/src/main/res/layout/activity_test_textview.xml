<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.twq.databindinghelper.view.AutoTextView
            android:id="@+id/tv_test"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/test_layer"
            android:gravity="center"
            android:padding="12dp"
            android:text="123"
            android:visibility="invisible"
            app:line_height="0.5dp"
            app:line_isNeed="true"
            app:text_left="我是绘制出来的"
            app:text_left_padding="12dp"
            app:text_right="我是右边绘制文本"
            app:text_right_color="@color/colorPrimary"
            app:text_right_padding="20dp"
            app:text_right_size="12sp"
            tools:ignore="HardcodedText" />

        <com.twq.databindinghelper.view.FlickerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/view_distance_12"
            android:text="Loading"
            android:textColor="#444"
            android:textSize="32sp"
            app:color_move="@color/color_app"
            app:duration_text="2000"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启" />
    </LinearLayout>
</layout>