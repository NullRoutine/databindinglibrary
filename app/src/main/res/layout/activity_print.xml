        <Button
            android:id="@+id/btn_print_custom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_distance_48"
            android:text="打印自定义" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

