<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"
            android:text="1111111111111111111111111111111111111111111111"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <com.twq.databindinghelper.view.SpringBackScrollview
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_launcher" />

                <Button
                    android:id="@+id/btn_animator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="仿简书App搜索框" />

                <Button
                    android:id="@+id/btn_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="fragment测试" />

                <Button
                    android:id="@+id/btn_fragmentTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="fragment测试二(Viewpager)" />

                <Button
                    android:id="@+id/btn_textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TextView测试" />

                <Button
                    android:id="@+id/btn_toolBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="折叠布局测试" />

                <Button
                    android:id="@+id/btn_thread"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Android线程池" />

                <Button
                    android:id="@+id/btn_test_clock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="模拟时钟" />

                <Button
                    android:id="@+id/btn_water"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="水印图片" />

                <Button
                    android:id="@+id/btn_wave_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="贝塞尔曲线" />
            </LinearLayout>
        </com.twq.databindinghelper.view.SpringBackScrollview>
    </LinearLayout>
</layout>